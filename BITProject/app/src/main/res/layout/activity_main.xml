<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:src="@drawable/bitlogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="197dp" tools:layout_editor_absoluteX="6dp" android:id="@+id/editText3"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="184dp" android:hint="Enter the Username"/>
    <ImageView
            android:src="@drawable/bitlogo"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:id="@+id/imageView"
            android:scaleType="fitXY" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="345dp"
            tools:layout_editor_absoluteX="153dp" android:id="@+id/button2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="95dp" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="260dp" tools:layout_editor_absoluteX="6dp" android:id="@+id/editText5"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="200dp"
            android:hint="Enter the password"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="47dp" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="109dp"
            android:id="@+id/textView2"/>
</android.widget.RelativeLayout>