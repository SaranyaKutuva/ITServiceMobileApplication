<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:background="@android:color/background_light"         android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="99dp" app:srcCompat="@drawable/bitlogo"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:id="@+id/imageView4" android:scaleType="fitXY"/>
     <TextView
           android:text="Payment Form"
           android:layout_width="154dp"
           android:layout_height="wrap_content"
           android:id="@+id/textView17"
           android:textAppearance="@style/TextAppearance.AppCompat.Medium"
           android:layout_alignParentTop="true" android:layout_marginTop="122dp"
           android:layout_centerHorizontal="true" android:textStyle="bold" android:textAllCaps="true"/>
    <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:layout_marginTop="165dp"
          android:id="@+id/editText" android:hint="JobId"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_marginBottom="133dp" android:id="@+id/button13" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_alignParentStart="true"
            android:id="@+id/editText2"
            android:hint="Enter the Hours Worked" android:layout_alignParentTop="true"
            android:layout_marginTop="225dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText8"
            android:layout_alignParentBottom="true" android:layout_marginBottom="193dp"
            android:hint="Enter the kilometer Travelled" android:layout_alignParentStart="true"/>
    <Button
            android:text="0434223434"
            android:layout_width="130dp"
            android:layout_height="26dp"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="77dp" android:background="@android:color/background_light"
            android:layout_alignStart="@+id/textView17"/>
    <Button
            android:text="bitServcies@bit.com.au"
            android:layout_width="223dp"
            android:layout_height="32dp" android:layout_alignParentBottom="true"
            android:id="@+id/button12" android:layout_marginBottom="31dp" android:layout_alignStart="@+id/textView17"
            android:background="@android:color/background_light"/>
    <ImageView
            android:layout_width="52dp"
            android:layout_height="39dp" app:srcCompat="@drawable/ic_message"
            android:id="@+id/imageView12" android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/button3" android:layout_marginStart="51dp"
            android:layout_marginBottom="-7dp"/>
    <ImageView
            android:layout_width="53dp"
            android:layout_height="38dp" app:srcCompat="@drawable/ic_mail"
            android:id="@+id/imageView13"
            android:layout_alignTop="@+id/button12" android:layout_alignStart="@+id/imageView12"/>

</RelativeLayout>